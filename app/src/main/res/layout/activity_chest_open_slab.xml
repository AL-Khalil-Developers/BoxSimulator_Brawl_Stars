<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_fone_for_box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rotate"
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:background="@drawable/new_box_anim_spin_three" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:background="@drawable/smoke"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/card_lay"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rel_color"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:id="@+id/card"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/fontsbrawl"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:text="Carl"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_count"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/plus_stars"
                    android:fontFamily="@font/fontsbrawl"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="2"
                    android:text="150"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/casing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/box_icons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9" />

        <ImageView
            android:id="@+id/click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/bonuses"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/money_box"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/coins_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/fontsbrawl"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fontsbrawl"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="2"
        android:text="Tap! Tap!"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/info_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/info_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:background="@drawable/info_about" />

            <TextView
                android:id="@+id/name_of_brawler"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fontsbrawl"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="2"
                android:text="New Brawler"
                android:textColor="@android:color/white"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/congrat"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/fontsbrawl"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="2"
                android:text="You unlock new brawler, we congratulate you!"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/new_brawler"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/have"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/have_anim"
        android:fontFamily="@font/fontsbrawl"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:text="250"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/money_give"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/money_give"
            android:fontFamily="@font/fontsbrawl"
            android:gravity="bottom|center_vertical|center_horizontal|center"
            android:shadowColor="@android:color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="1"
            android:text="10"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/gems_give"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/gems_give"
            android:fontFamily="@font/fontsbrawl"
            android:gravity="bottom|center_vertical|center_horizontal|center"
            android:shadowColor="@android:color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="1"
            android:text="10"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ticket_give"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/ticket_give"
            android:fontFamily="@font/fontsbrawl"
            android:gravity="bottom|center_vertical|center_horizontal|center"
            android:shadowColor="@android:color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="1"
            android:text="10"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>
