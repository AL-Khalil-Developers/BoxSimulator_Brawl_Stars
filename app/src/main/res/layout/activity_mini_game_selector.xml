<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brawlers">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fone_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@drawable/ideal_back_fourth" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brawlerstop" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/back_to_home" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-5dp"
        android:layout_toRightOf="@+id/back"
        android:fontFamily="@font/fontsbrawl"
        android:gravity="top"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Minigames "
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/home" />

    <TextView
        android:id="@+id/ticket"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/home"
        android:background="@drawable/ticket"
        android:gravity="center"
        android:text="20"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:fontFamily="@font/fontsbrawl" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/guess"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:background="@drawable/guess_the_brawler" />

            <TextView
                android:id="@+id/guess_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/fontsbrawl"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="guess the brawler"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/drum"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:background="@drawable/skins_drum" />

            <TextView
                android:id="@+id/drum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/fontsbrawl"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="lucky skin"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/shaddow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@android:color/black" />

        <RelativeLayout
            android:id="@+id/skin_lay"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:background="@drawable/info_tablet" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/skin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-30dp"
                android:background="@drawable/shaddow" />

            <ImageView
                android:id="@+id/skin"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/emz_skin"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/cancle"
                android:fontFamily="@font/fontsbrawl"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="TAKE"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:visibility="invisible" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fontsbrawl"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="SKINS"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
