<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_chest"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/scells"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@drawable/scells"
        android:visibility="invisible" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fone_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@drawable/ideal_back_fourth" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brawlerstop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/back_to_home" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:fontFamily="@font/fontsbrawl"
                android:gravity="top"
                android:shadowColor="@android:color/black"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="2"
                android:text="Shop "
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/star"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="128dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/star_coins"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="invisible"
                app:fontFamily="@font/fontsbrawl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/home"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="@drawable/home" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="50dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="250dp"
                                android:alpha="0.2"
                                android:background="@drawable/bonus_three_fone" />

                            <LinearLayout
                                android:id="@+id/bonus_lang"
                                android:layout_width="140dp"
                                android:layout_height="250dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bonus_three_top"
                                android:gravity="center"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/advert_gems"
                                    android:layout_width="100dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="20dp"
                                    android:background="@android:color/transparent" />

                                <Button
                                    android:id="@+id/advert_money"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="20dp"
                                    android:background="@android:color/transparent" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/video_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/fontsbrawl"
                                android:paddingLeft="13dp"
                                android:shadowColor="@android:color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="2"
                                android:text="OTHER BONUS"
                                android:textAlignment="center"
                                android:textColor="@android:color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="400dp"
                                android:layout_height="250dp"
                                android:alpha="0.3"
                                android:background="@drawable/skin_lay_slab" />

                            <RelativeLayout
                                android:id="@+id/first_skin_lay"
                                android:layout_width="100dp"
                                android:layout_height="200dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="38dp">

                                <ImageView
                                    android:id="@+id/fone_first"
                                    android:layout_width="98dp"
                                    android:layout_height="190dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/shin_background" />

                                <ImageView
                                    android:id="@+id/first_skin"
                                    android:layout_width="95dp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="20dp"
                                    android:scaleX="1.3"
                                    android:scaleY="1.3"
                                    android:src="@drawable/leon_skin" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/skin_mesh" />

                                <TextView
                                    android:id="@+id/firts_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="-5dp"
                                    android:fontFamily="@font/fontsbrawl"
                                    android:text="Leon"
                                    android:textColor="@android:color/white" />

                                <ImageView
                                    android:id="@+id/firts_done"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/skin_done"
                                    android:visibility="invisible" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/fontsbrawl"
                                            android:paddingBottom="3dp"
                                            android:shadowColor="@android:color/black"
                                            android:shadowDx="2"
                                            android:shadowDy="2"
                                            android:shadowRadius="2"
                                            android:text="80"
                                            android:textColor="@android:color/white" />

                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/gem_one" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/new_icon"
                                android:layout_width="30dp"
                                android:layout_height="23dp"
                                android:layout_marginLeft="75dp"
                                android:layout_marginTop="35dp"
                                android:src="@drawable/new_icon"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/skin_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/fontsbrawl"
                                android:shadowColor="@android:color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="2"
                                android:text="Skin"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/gadget_main_lay"
                            android:layout_width="110dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.3"
                                android:background="@drawable/skin_lay_slab" />

                            <TextView
                                android:id="@+id/gadget_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="-3dp"
                                android:fontFamily="@font/fontsbrawl"
                                android:shadowColor="@android:color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="2"
                                android:text="GADGETS"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                            <RelativeLayout
                                android:id="@+id/gadget_lay_one"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="40dp">

                                <ImageView
                                    android:id="@+id/gadget_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shely" />

                                <ImageView
                                    android:id="@+id/bar_gad_one"
                                    android:layout_width="90dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="0.7dp"
                                    android:layout_marginRight="0.7dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="@drawable/gadget_shop" />

                                <TextView
                                    android:id="@+id/buyed_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="3dp"
                                    android:fontFamily="@font/fontsbrawl"
                                    android:shadowColor="@android:color/black"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="purchased "
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:visibility="invisible" />

                                <LinearLayout
                                    android:id="@+id/price_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginRight="3dp"
                                        android:fontFamily="@font/fontsbrawl"
                                        android:shadowColor="@android:color/black"
                                        android:shadowDx="2"
                                        android:shadowDy="2"
                                        android:shadowRadius="2"
                                        android:text="1000"
                                        android:textColor="@android:color/white" />

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="1dp"
                                        android:background="@drawable/coin_one"
                                        android:foregroundGravity="center" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/gadget_icon1"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/gadget" />

                                <TextView
                                    android:id="@+id/titleg1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="7dp"
                                    android:fontFamily="@font/fontsbrawl"
                                    android:shadowColor="@android:color/black"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="1"
                                    android:text="GADGET"
                                    android:textColor="@android:color/white"
                                    android:textSize="10sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/gadget_lay_two"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_below="@+id/gadget_lay_one"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:id="@+id/gadget_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tara" />

                                <ImageView
                                    android:id="@+id/bar_gad_two"
                                    android:layout_width="90dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="0.7dp"
                                    android:layout_marginRight="0.7dp"
                                    android:layout_marginBottom="1dp"
                                    android:background="@drawable/gadget_shop" />

                                <TextView
                                    android:id="@+id/buyed_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="3dp"
                                    android:fontFamily="@font/fontsbrawl"
                                    android:shadowColor="@android:color/black"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="purchased "
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:visibility="invisible" />

                                <LinearLayout
                                    android:id="@+id/price_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginRight="3dp"
                                        android:fontFamily="@font/fontsbrawl"
                                        android:shadowColor="@android:color/black"
                                        android:shadowDx="2"
                                        android:shadowDy="2"
                                        android:shadowRadius="2"
                                        android:text="1000"
                                        android:textColor="@android:color/white" />

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="1dp"
                                        android:background="@drawable/coin_one"
                                        android:foregroundGravity="center" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/gadget_icon2"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/gadget" />

                                <TextView
                                    android:id="@+id/titleg2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="7dp"
                                    android:fontFamily="@font/fontsbrawl"
                                    android:shadowColor="@android:color/black"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="GADGET"
                                    android:textColor="@android:color/white"
                                    android:textSize="10sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="22dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="250dp"
                                android:alpha="0.3"
                                android:background="@drawable/gems_three_fone" />

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="250dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:background="@drawable/gems_three_top"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="42dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/gems_one"
                                        android:layout_width="100dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="bottom"
                                        android:background="@android:color/transparent" />

                                    <Button
                                        android:id="@+id/gems_two"
                                        android:layout_width="100dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="bottom"
                                        android:background="@android:color/transparent" />

                                    <Button
                                        android:id="@+id/gems_three"
                                        android:layout_width="100dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="bottom"
                                        android:background="@android:color/transparent" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/gems_four"
                                        android:layout_width="100dp"
                                        android:layout_height="90dp"
                                        android:layout_gravity="bottom"
                                        android:background="@android:color/transparent" />

                                    <Button
                                        android:id="@+id/gems_five"
                                        android:layout_width="100dp"
                                        android:layout_height="90dp"
                                        android:layout_gravity="bottom"
                                        android:background="@android:color/transparent" />

                                    <Button
                                        android:id="@+id/gems_six"
                                        android:layout_width="100dp"
                                        android:layout_height="90dp"
                                        android:layout_gravity="bottom"
                                        android:background="@android:color/transparent" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/gems_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/fontsbrawl"
                                android:paddingLeft="16dp"
                                android:shadowColor="@android:color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="2"
                                android:text="GEM PACKS"
                                android:textColor="@android:color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="32dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.2"
                                android:background="@drawable/ticket_three_fone" />

                            <LinearLayout
                                android:layout_width="230dp"
                                android:layout_height="250dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="9dp"
                                android:background="@drawable/ticket_three_top"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="42dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/ticket_one"
                                        android:layout_width="100dp"
                                        android:layout_height="90dp"
                                        android:layout_gravity="bottom"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="12dp"
                                        android:background="@android:color/transparent" />

                                    <Button
                                        android:id="@+id/ticket_two"
                                        android:layout_width="100dp"
                                        android:layout_height="90dp"
                                        android:layout_gravity="bottom"
                                        android:layout_marginLeft="16dp"
                                        android:background="@android:color/transparent" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <Button
                                        android:id="@+id/ticket_three"
                                        android:layout_width="90dp"
                                        android:layout_height="100dp"
                                        android:layout_gravity="bottom"
                                        android:layout_marginLeft="65dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/ticket_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/fontsbrawl"
                                android:paddingLeft="16dp"
                                android:shadowColor="@android:color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="2"
                                android:text="TICKETS PACKS"
                                android:textColor="@android:color/white" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="32dp"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="42dp"
                                android:orientation="vertical"
                                android:visibility="invisible">

                                <Button
                                    android:id="@+id/star_one"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="25dp"
                                    android:background="@android:color/transparent" />

                                <Button
                                    android:id="@+id/star_two"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="16dp"
                                    android:background="@android:color/transparent" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp">

        <TextView
            android:id="@+id/ticket"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ticket"
            android:gravity="center"
            android:text="20"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:fontFamily="@font/fontsbrawl" />

        <TextView
            android:id="@+id/coins"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/coin_two"
            android:gravity="center"
            android:text="20"
