<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp">

        <ImageView
            android:id="@+id/card"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/shely" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/fontsbrawl"
            android:shadowColor="@android:color/black"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/power"
            android:layout_width="62dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/lvl"
            android:fontFamily="@font/fontsbrawl"
            android:gravity="center"
            android:text="POWER 4"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/power_upgrade"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/power_upgrade"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_count"
            android:layout_width="141.5dp"
            android:layout_height="40.7dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/fontsbrawl"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/upgrade_line"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/upgrade_line_second"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/top_upgrade"
            android:layout_width="141.5dp"
            android:layout_height="40.7dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginTop="105dp"
            android:background="@drawable/upgrade_top"
            android:fontFamily="@font/fontsbrawl"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/gadget"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="12dp" />

            <ImageView
                android:id="@+id/starpower"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_upgrade"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="115dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/fontsbrawl"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="UPGRADE"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/fontsbrawl"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="OPEN BRAWL BOXES\10TO UNLOCK"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
